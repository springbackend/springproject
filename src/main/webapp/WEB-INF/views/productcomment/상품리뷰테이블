create table product_comment(
pc_idx number(10) primary key, -- 리뷰번호
pc_content clob,-- 리뷰내용
pc_image varchar(50),--상품사진
pc_good number(10),--좋아요
p_idx number(10), -- 상품번호
u_idx number(10)	-- 유저번호
);
create sequence pc_seq_idx;

insert into product_comment values(pc_seq_idx.nextval,'매우좋아요','test_file.jpg',0,1,2);
alter table product_comment add pc_star number(5);--별점
update product_comment set pc_star = 4;
insert into product_comment values(pc_seq_idx.nextval,'좀별로에요','test_file.jpg',0,1,2,3);
alter table product_comment add pc_regidate date;--작성날짜
update product_comment set pc_regidate = sysdate;

ALTER TABLE product_comment
DROP COLUMN pc_good;

create table pcgood(
pcg_idx number(10) primary key,--좋아요번호
pc_idx number(10),--상품리뷰번호
u_idx number(10),--좋아요누른 회원번호
pcg_count number(10)--좋아요 갯수
);



